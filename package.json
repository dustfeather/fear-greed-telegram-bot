{
  "name": "fear-greed-telegram-bot",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:config": "node scripts/generate-wrangler-config-local.js",
    "dev": "npm run dev:config && wrangler dev",
    "dev:scheduled": "npm run dev:config && wrangler dev --test-scheduled",
    "start": "npm run dev",
    "deploy": "wrangler deploy",
    "webhook:setup": "node scripts/setup-telegram-webhook.js",
    "webhook:info": "node scripts/get-telegram-webhook-info.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --forceExit",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --maxWorkers=2 --forceExit",
    "test:debug": "node --experimental-vm-modules --inspect-brk node_modules/jest/bin/jest.js --runInBand",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@cloudflare/workers-types": "^4.20251128.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "fast-check": "^4.4.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.51.0"
  },
  "overrides": {
    "glob": "^10.5.0",
    "inflight": "npm:@aashutoshrathi/inflight@^1.0.0"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.1",
    "quickchart-js": "^3.1.3"
  }
}
